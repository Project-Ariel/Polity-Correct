<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CitizenDetails">

    <include layout="@layout/layout_welcome_page" />

    <TextView
        android:id="@+id/full_name"
        android:layout_width="81dp"
        android:layout_height="36dp"
        android:layout_gravity="start"
        android:fontFamily="@font/alef"
        android:layoutDirection="rtl"
        android:text="שם מלא"
        android:textAlignment="textStart"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" />

    <EditText
        android:id="@+id/User_full_name"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_gravity="start"
        android:ems="10"
        android:inputType="textPersonName"
        android:layoutDirection="rtl"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.28" />

    <TextView
        android:id="@+id/ID"
        android:layout_width="126dp"
        android:layout_height="38dp"
        android:layout_gravity="start"
        android:fontFamily="@font/alef"
        android:layoutDirection="rtl"
        android:text="תעודת זהות"
        android:textAlignment="textStart"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.38" />

    <EditText
        android:id="@+id/User_ID"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_gravity="start"
        android:inputType="number|textPersonName"
        android:layoutDirection="rtl"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.36" />

    <TextView
        android:id="@+id/YearOfBirth"
        android:layout_width="99dp"
        android:layout_height="32dp"
        android:layout_gravity="start"
        android:fontFamily="@font/alef"
        android:layoutDirection="rtl"
        android:text="שנת לידה"
        android:textAlignment="textStart"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.46" />

    <EditText
        android:id="@+id/User_year_of_birth"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_gravity="start"
        android:inputType="number"
        android:layoutDirection="rtl"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.44" />

    <TextView
        android:id="@+id/userChoosePg"
        android:layout_width="120dp"
        android:layout_height="32dp"
        android:layout_gravity="start"
        android:fontFamily="@font/alef"
        android:layoutDirection="rtl"
        android:text="בחר מפלגה"
        android:textAlignment="textStart"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.55" />

    <Spinner
        android:id="@+id/choosePG"
        android:layout_width="220dp"
        android:layout_height="45dp"
        android:background="@android:drawable/btn_dropdown"
        android:layoutDirection="rtl"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.78"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.55" />

    <RadioGroup
        android:layout_width="80dp"
        android:layout_height="91dp"
        android:layout_gravity="start"
        android:layoutDirection="rtl"
        android:orientation="vertical"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.71">

        <RadioButton
            android:id="@+id/male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alef"
            android:onClick="onRadioButtonClicked"
            android:text="זכר"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/female"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alef"
            android:onClick="onRadioButtonClicked"
            android:text="נקבה"
            android:textSize="20sp" />
    </RadioGroup>

    <Button
        android:id="@+id/finish"
        android:layout_width="98dp"
        android:layout_height="49dp"
        android:fontFamily="@font/alef"
        android:layoutDirection="rtl"
        android:onClick="onClickOK"
        android:text="סיום"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9" />

</androidx.constraintlayout.widget.ConstraintLayout>